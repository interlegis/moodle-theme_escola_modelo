<script>
    function mostrar_itens(obj) {
        document.getElementById('painelCategorias').hidden="none";
        document.getElementById('cursos').hidden="true";
        switch (obj.id) {
            case 'painelCategorias_1':
                document.getElementById('painelCategorias').hidden = false;
